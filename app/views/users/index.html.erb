<div class="container pt-5">
	<div class="row">
		<div class="col-md-3"></div>

		<div class="col-md-3">
			<div>
				<h4 class="">Profile Picture</h4>
				<%= image_tag current_user.user_picture, style: "width: 150px; height: 150px; border-radius: 50%;" %>
			</div>
			<div>
				<h4>User Name</h4>
				<p><%= current_user.username %></p>
			</div>
			<div>
				<h4>Email</h4>
				<p><%= current_user.email %></p>
			</div>
		</div>
		<div class="col-md-3">
			<div>
				<h4>Your Addresses</h4>
				<p><%= link_to "View", addresses_path  %></p>
			</div>
			<div>
				<h4>Your Orders</h4>
				<p><%= link_to "View", orders_path  %></p>
			</div>
		</div>

		<div class="col-md-3"></div>
	</div>
</div>
