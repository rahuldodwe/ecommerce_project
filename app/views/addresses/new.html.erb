<div class="container mt-5">
  <h2 class="pt-2">Add Shipping Address</h2>


  <%= form_with model: @address, local: true do |f| %>
    <div>
      <%= f.label :line1, "Line 1" %>
      <%= f.text_field :line1 %>
    </div>
    <div>
      <%= f.label :line2, "Line 2" %>
      <%= f.text_field :line2 %>
    </div>
    <div>
      <%= f.label :city, "City" %>
      <%= f.text_field :city %>
    </div>
    <div>
      <%= f.label :state, "State" %>
      <%= f.text_field :state %>
    </div>
    <div>
      <%= f.label :postal_code, "Postal Code" %>
      <%= f.text_field :postal_code %>
    </div>
    <div>
      <%= f.label :country, "Country" %>
      <%= f.text_field :country %>
    </div>

    <%= f.submit "Save Address", class: "btn btn-primary" %>
  <% end %>
</div>