<h1>Leave Feedback</h1>

<%= form_with model: @feedback, url: order_feedbacks_path(@order), local: true do |f| %>
  <div>
    <%= f.label :product_id, "Select Product" %>
    <%= f.collection_select :product_id, @order.products, :id, :name, prompt: "Choose a product" %>
  </div>

  <div>
    <%= f.label :rating, "Rating (1-5)" %>
    <%= f.number_field :rating, min: 1, max: 5, step: 1 %>
  </div>

  <div>
    <%= f.label :comment, "Comment" %>
    <%= f.text_area :comment, rows: 5 %>
  </div>

  <%= f.submit "Submit Feedback", class: "btn btn-primary" %>
<% end %>
